<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="100"
            android:background="@color/backkk"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="70"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/curWeather"
                    android:layout_width="0px"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="80"
                    app:srcCompat="@drawable/weather_sunny" />

                <LinearLayout
                    android:id="@+id/weatherLayout"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="130"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fortest"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_marginTop="3dp"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:text="Current Weather" />

                    <TextView
                        android:id="@+id/curWeatherText"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:text="No Info" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                app:srcCompat="@drawable/waon_logo" />

            <FrameLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="35">

            </FrameLayout>

            <ImageView
                android:id="@+id/setting"
                android:layout_width="0px"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="25"
                app:srcCompat="@drawable/setting" />

        </LinearLayout>

        <ListView
            android:id="@+id/alarmList"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="700" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>